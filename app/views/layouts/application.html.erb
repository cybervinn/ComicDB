<!DOCTYPE html>
<html>
<head>
  <title>ComicDB</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= render :partial => 'layouts/navigation' %>

<div class="flash">
   <% if flash[:notice] %>
     <div class="notice">
       <%= flash[:notice] %>
     </div>
   <% end %>
   
   <% if flash[:alert] %>
     <div class="alert">
       <%= flash[:alert] %>
     </div>
   <% end %>
 </div>


<%= yield %>


</body>
</html>

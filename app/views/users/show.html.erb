<h1 class = "text-center"> User Profile for: <%= current_user.nickname %> </h1>

  <div class = "row">
    <div class = "well col-md-10 col-md-offset-1">
      <table class="table table-striped table-hover">

        <tbody>

          <tr>
            <td> Avatar </td>
            <td><%= image_tag current_user.avatar.url(:medium) %></td>
          </tr>

          <tr>
            <td> First Name: </td>
            <td><%= current_user.fname %></td>
          </tr>

          <tr>
            <td> Last Name: </td>
            <td><%= current_user.lname %></td>
          </tr>

          <tr>
            <td> Nickname: </td>
            <td> Email Address / Username: </td>
          </tr>

          <tr>
            <td></td>
            <td><%= link_to 'Edit', edit_user_path(current_user.id) %> | <%= link_to 'Delete', user_path(current_user.id), method: :delete %> </td>
          </tr>

        </tbody>

      </table>
    </div>
  </div>
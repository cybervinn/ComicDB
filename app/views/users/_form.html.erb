<div class = "row">
  <div class = "well col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>

    <%= f.label :fname, "First Name" %> 
    <%= f.text_field :fname %> <br/> <br/>

    <%= f.label :lname, "Last Name" %>
    <%= f.text_field :lname %> <br/> <br/>

    <%= f.label :email %> 
    <%= f.text_field :email %> <br/> <br/>

    <%= f.label :password %>
    <%= f.password_field :password %> <br/>

    <hr/>

    <%= f.submit(@user.new_record? ? 'Register' : 'Save Changes', class: "btn btn-success") %>

    <% end %>
  </div>
</div>
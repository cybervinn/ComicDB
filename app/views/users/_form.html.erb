<div class = "row">
  <div class = "well well-lg col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">

    <%= form_for @user, html: { multipart: true } do |f| %>

    <div class = "col-md-6">
      <div class="form-group">
        <%= f.label :fname, "First Name" %> 
        <%= f.text_field :fname %> 
      </div>

      <div class="form-group">
        <%= f.label :lname, "Last Name" %>
        <%= f.text_field :lname %>
      </div>

      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname %>
      </div>

      <div class="form-group">
        <%= f.label :email %> 
        <%= f.text_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class ="col-md-6">
      <div class="form-group">



          <%= f.label :avatar %>
          <%= image_tag(@user.avatar.url(:medium), class: 'avatarsize') %> 
          <hr>
          <%= f.file_field :avatar %> 



      </div>

      <div class="form-group">

        <% if logged_in? && current_user.admin? %>
          <%= f.label :admin, "Administrator" %>
          <%= f.check_box(:admin) %>
        <% end %>

      </div>
    </div>

    <%= f.submit(@user.new_record? ? 'Register' : 'Save Changes', class: "btn btn-success") %>
    
    <% end %>

  </div>
</div>



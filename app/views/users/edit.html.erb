<% if @user.errors.any? %>
  <div class = "row">
    <div class = "alert alert-danger col-md-6 col-md-offset-3">
      <h5> Please correct the following errors: </h5>
      <ul>
        <% @user.errors.full_messages.each do |error| %>
         <li> <%= error %> </li>
         <% end %>
      </ul>
    </div>
  </div>
<% end %>

